@{
    ViewData["Title"] = "Delete Task";
}

@model TaskInfo

@*View to confirm whether the user wants to delete the record or not. Delete button deletes the record and returns the user to the Quadrant view, while the cancel button
keeps the record and returns the user back to the Quadrant view*@
<div class="container text-center">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <h1>Are you sure you want to delete this task?</h1>
            <h4>This action cannot be undone.</h4>
            <br />
            <a asp-controller="Home" asp-action="DeleteTask" asp-route-id="@Model.TaskID" class="btn btn-danger">Delete</a>
            <a asp-controller="Home" asp-action="Quadrant" class="btn btn-primary">Cancel</a>
        </div>
        <div class="col-3"></div>
    </div>
</div>