@{
    ViewData["Title"] = "Tasks";
}
@model TaskSite.Models.TaskInfo

<form method="post">
    <div asp-validation-summary="All"></div>
    <label asp-for="Task">Task Name</label><br />
    <input asp-for="Task"/><br />

    <label asp-for="DueDate">Due Date</label><br />
    <input type='date'asp-for="DueDate"/><br />

    <label asp-for="Quadrant">Quadrant</label><br />
    <input asp-for="Quadrant"/>

    <label asp-for="Category">Category</label>
    <select asp-for="Category">
        <option value="">Select a Category</option>
        @foreach(Category c in ViewBag.categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select><br />

    <label asp-for="Completed">Completed</label><br />
    <select asp-for="Completed">
        <option value="True">True</option>
        <option value="False">False</option>
    </select><br />

</form>