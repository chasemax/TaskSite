@{
    ViewData["Title"] = "Delete Task";
}

@model TaskInfo

<div class="container text-center">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <h1>Are you sure you want to delete this task?</h1>
            <h4>This action cannot be undone.</h4>
            <br />
            <form method="post" asp-controller="Home" asp-action="DeleteTask">
                <button class="btn btn-danger">Delete</button>
                <a asp-controller="Home" asp-action="Quadrant" class="btn btn-primary">Cancel</a>
                <input type="hidden" asp-for="Task" />
            </form>
        </div>
        <div class="col-3"></div>
    </div>
</div>